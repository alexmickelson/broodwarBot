        min-height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }


    .player-slots {
        max-width: 500px;
    }

    .player-label {
        min-width: 90px;
    }

    .configuration-form {
        width: 100%;
        max-width: 600px;
    }
