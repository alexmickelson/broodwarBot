@using BWAPI.NET
@using MyBotWeb.Services
@inject BotService BotService
@implements IDisposable

<div class="bg-gray-800 border border-gray-700 rounded-lg p-4 mb-4">
    <h2 class="text-white">Game Status</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-4">
        <div class="bg-gray-700 rounded-lg p-4">
            <div>
                <strong class="text-gray-300">In Game:</strong> 
                <span class="@(BotService.IsInGame ? "text-green-400" : "text-gray-500") font-bold">
                    @(BotService.IsInGame ? "Yes" : "No")
                </span>
            </div>
        </div>
        <div class="bg-gray-700 rounded-lg p-4">
            <div>
                <strong class="text-gray-300">Status:</strong> 
                <span class="text-white">@BotService.GameStatus</span>
            </div>
        </div>
        <div class="bg-gray-700 rounded-lg p-4">
            <div>
                <strong class="text-gray-300">Frame:</strong> 
                <span class="text-white">@GetFrameCount()</span>
            </div>
        </div>
    </div>
</div>

<div class="bg-gray-800 border border-gray-700 rounded-lg p-4 mb-4">
    <h2 class="text-white">Resources</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
        <div class="bg-gray-700 rounded-lg p-4">
            <div>
                <strong class="text-gray-300">Minerals:</strong> 
                <span class="text-white">@GetMinerals()</span>
            </div>
        </div>
        <div class="bg-gray-700 rounded-lg p-4">
            <div>
                <strong class="text-gray-300">Gas:</strong> 
                <span class="text-white">@GetGas()</span>
            </div>
        </div>
        <div class="bg-gray-700 rounded-lg p-4">
            <div>
                <strong class="text-gray-300">Supply:</strong> 
                <span class="text-white">@GetSupplyUsed() / @GetSupplyTotal()</span>
            </div>
        </div>
    </div>
</div>

<div class="bg-gray-800 border border-gray-700 rounded-lg p-4 mb-4">
    <h2 class="text-white">Units (@GetUnits().Count())</h2>
    @if (GetUnits().Any())
    {
        <div class="overflow-x-auto mt-4">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Health</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Completed</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Position</th>
                    </tr>
                </thead>
                <tbody class="bg-gray-800 divide-y divide-gray-700">
                    @foreach (var unit in GetUnits())
                    {
                        <tr class="hover:bg-gray-700">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@unit.GetUnitType().ToString()</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <div class="w-full bg-gray-700 rounded-full h-2.5">
                                    <div class="bg-green-500 h-2.5 rounded-full" 
                                         style="width: @((unit.GetHitPoints() * 100.0 / unit.GetUnitType().MaxHitPoints()))%">
                                    </div>
                                </div>
                                <div class="text-xs text-gray-400 mt-1">
                                    @unit.GetHitPoints() / @unit.GetUnitType().MaxHitPoints()
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@(unit.IsCompleted() ? "✓" : "Building...")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">(@unit.GetPosition().X, @unit.GetPosition().Y)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-gray-500 italic mt-4">No units available</p>
    }
</div>

<div class="bg-gray-800 border border-gray-700 rounded-lg p-4 mb-4">
    <h2 class="text-white">Buildings (@GetBuildings().Count())</h2>
    @if (GetBuildings().Any())
    {
        <div class="overflow-x-auto mt-4">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Health</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Completed</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Position</th>
                    </tr>
                </thead>
                <tbody class="bg-gray-800 divide-y divide-gray-700">
                    @foreach (var building in GetBuildings())
                    {
                        <tr class="hover:bg-gray-700">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@building.GetUnitType().ToString()</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <div class="w-full bg-gray-700 rounded-full h-2.5">
                                    <div class="bg-green-500 h-2.5 rounded-full" 
                                         style="width: @((building.GetHitPoints() * 100.0 / building.GetUnitType().MaxHitPoints()))%">
                                    </div>
                                </div>
                                <div class="text-xs text-gray-400 mt-1">
                                    @building.GetHitPoints() / @building.GetUnitType().MaxHitPoints()
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@(building.IsCompleted() ? "✓" : "Building...")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">(@building.GetPosition().X, @building.GetPosition().Y)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-gray-500 italic mt-4">No buildings available</p>
    }
</div>

@code {
    private System.Threading.Timer? timer;

    protected override void OnInitialized()
    {
        // Refresh the UI every 500ms
        timer = new (_ =>
        {
            InvokeAsync(StateHasChanged);
        }, null, TimeSpan.Zero, TimeSpan.FromMilliseconds(500));
    }

    public void Dispose()
    {
        timer?.Dispose();
    }

    private int GetFrameCount() => BotService.Game?.GetFrameCount() ?? 0;
    private int GetMinerals() => BotService.Game?.Self()?.Minerals() ?? 0;
    private int GetGas() => BotService.Game?.Self()?.Gas() ?? 0;
    private int GetSupplyUsed() => BotService.Game?.Self()?.SupplyUsed() ?? 0;
    private int GetSupplyTotal() => BotService.Game?.Self()?.SupplyTotal() ?? 0;

    private IEnumerable<BWAPI.NET.Unit> GetUnits()
    {
        if (BotService.Game == null) return Enumerable.Empty<BWAPI.NET.Unit>();
        
        var allUnits = BotService.Game.Self()?.GetUnits() ?? Enumerable.Empty<BWAPI.NET.Unit>();
        return allUnits.Where(u => u.Exists() && !u.GetUnitType().IsBuilding());
    }

    private IEnumerable<BWAPI.NET.Unit> GetBuildings()
    {
        if (BotService.Game == null) return Enumerable.Empty<BWAPI.NET.Unit>();
        
        var allUnits = BotService.Game.Self()?.GetUnits() ?? Enumerable.Empty<BWAPI.NET.Unit>();
        return allUnits.Where(u => u.Exists() && u.GetUnitType().IsBuilding());
    }
}
