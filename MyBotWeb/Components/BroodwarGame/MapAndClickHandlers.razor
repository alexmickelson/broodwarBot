@using BWAPI.NET
@inject BotService botService

<MapVisualization OnMapLeftClick="OnMapLeftClick" OnMapRightClick="OnMapRightClick" />

@code {
    private void OnMapLeftClick(Position position)
    {
        botService.Bot.MoveMinimapPoint = position;
    }

    private void OnMapRightClick(Position position)
    {
        botService.Bot.MilitaryPoint = position;
    }
}