@using MyBotWeb.Services
@inject BotService botService
@inject StarCraftService starCraftService

@if (_isClosing)
{
    <div class="bg-blue-900/50 border border-blue-700 rounded-lg p-4 text-blue-300">
        <div class="flex items-center">
            <svg class="animate-spin h-5 w-5 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                </path>
            </svg>
            Closing StarCraft
        </div>
    </div>
}
else
{
    <button class="
            bg-red-900/50 hover:bg-red-900 text-red-300 hover:text-red-100
            font-medium px-4 py-2 rounded-lg transition-colors
        " @onclick="HandleEndGameClick">
        âœ• End Game & Close StarCraft
    </button>
}

@code {

    private bool _isClosing = false;

    private async Task HandleEndGameClick()
    {
        _isClosing = true;

        await InvokeAsync(StateHasChanged);
        starCraftService.StopAndReset();
        botService.ResetBot();
        await InvokeAsync(StateHasChanged);
    }
}